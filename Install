#!/bin/bash

# Aktualisieren Sie Ihr System
sudo apt update
sudo apt upgrade -y

# Installieren Sie Python und Pip
sudo apt install python3 python3-pip -y

# Installieren Sie die erforderlichen Abhängigkeiten
sudo apt install build-essential libssl-dev libffi-dev python3-dev -y

# Installieren Sie Poetry
curl -sSL https://install.python-poetry.org | python3 -

# Klone das AutoGPT-Repository
git clone https://github.com/autogpt/autogpt.git
cd autogpt

# Installieren Sie die Python-Abhängigkeiten
poetry install

# Aktivieren Sie die virtuelle Umgebung
source $(poetry env info --path)/bin/activate

# Starten Sie den AutoGPT-Server
python3 manage.py runserver

